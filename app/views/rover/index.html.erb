<style>
    .center{
        position: relative;
        top: 20px;
        max-width: fit-content;
        margin: auto;
    }
</style>

<h1 class="center" style="font-size: 100px">Rover</h1>

<% @leiter = Leiter.where(stufe: "Rover", funktion: "Stufenleitung").first %>

<%= render partial: "shared/contact_form", locals: { image: @leiter.image,
                                                     name: "#{@leiter.firstname} #{@leiter.lastname} v/o #{@leiter.pfadiname.capitalize}",
                                                     funktion: "#{@leiter.funktion} #{@leiter.stufe}",
                                                     email: "#{@leiter.email}" } %>

<% @leiters = Leiter.where(stufe: "Rover").where.not(funktion: "Stufenleitung") %>
<% @leiters.each do |t| %>
  <%= render partial: "shared/contact_form", locals: { image: t.image,
                                                       name: "#{t.firstname} #{t.lastname} v/o #{t.pfadiname.capitalize}",
                                                       funktion: "#{t.funktion} #{t.stufe}",
                                                       email: "#{t.email}" } %>
<% end %>