          <h2><%= hock.title %></h2>
          <p><%= hock.description %></p>
          <p>Date: <%= hock.datetime %></p>
        </div>
      <% end %>
    <% end %>

  <% if @pfadi_hocks.present? %>
    <h1>Hocks for Pfadi</h1>
    <% @pfadi_hocks.each do |hock| %>
      <div class="hock">
        <h2><%= hock.title %></h2>
        <p><%= hock.description %></p>
        <p>Date: <%= hock.datetime %></p>
