<div class="slideshow-container">
  <div class="mySlides">
    <%= image_tag("IMG_6700.jpeg", class: "image", style: "filter: brightness(80%)") %>
  </div>
</div>

<div class="container home-header">
  <div class="home-title-screen">
    <%= image_tag("pfadi_logo.jpeg", class: "logo") %>
    <h1 class="playpen-sans-title text-title" style="color: white">Pfadi Höfe </h1>
    <p class="text-description playpen-sans-title" style="color: white">
      <i>Mit freud debii! - Mis bescht! - Allzeit bereit! - Zäme wyter! - Bewusst handeln! </i></p>
    <div class="center" style="z-index: 5;">
      <svg xmlns="http://www.w3.org/2000/svg" width="128" height="128" fill="white" style="z-index: auto; opacity: 1; margin-top: 50px" class="bi bi-chevron-double-down" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M1.646 6.646a.5.5 0 0 1 .708 0L8 12.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708"/>
        <path fill-rule="evenodd" d="M1.646 2.646a.5.5 0 0 1 .708 0L8 8.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708"/>
      </svg>
    </div>
  </div>
</div>


<div class="post-it-container">
  <h1 class="center fuzzy-bubbles-bold post-it-title-1" style="font-size: 6vw;">Hockzettel</h1>
</div><div class="container" style="margin-top: 20px">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-8 col-sm-10 m-4 post-it-sponsor-2 shadow-lg" style="background-color: #adffad">
      <h1 class="dm-sans-title stufen-titel-links">🦫 Biber 🦫</h1>
      <%= render partial: "home/hocks", locals: { hock: @closest_biber_hock } %>
    </div>
    <div class="w-100"></div>
    <div class="col-lg-8 col-md-8 col-sm-10 m-4 post-it-sponsor-3 shadow-lg" style="background-color: #d5d5fd">
      <h1 class="dm-sans-title stufen-titel-rechts">🐺 Wölfli 🐺</h1>
      <%= render partial: "home/hocks", locals: { hock: @closest_woelfli_hock } %>
    </div>
    <div class="w-100"></div>
    <div class="col-lg-8 col-md-8 col-sm-10 m-4 post-it-sponsor-5 shadow-lg" style="background-color: #ffd6d6">
      <h1 class="dm-sans-title stufen-titel-links">⚜️ Pfadi ⚜️</h1>
      <%= render partial: "home/hocks", locals: { hock: @closest_pfadi_hock } %>
    </div>
  </div>
</div>

<% if @latest_article.present? %>
  <div class="post-it-container">
    <h1 class="fuzzy-bubbles-bold mb-3 post-it-title-5" style="font-size: 5vw;">Neuster Beitrag</h1>
  </div>  <div class="container w-100">
    <%= render partial: "home/articles", locals: { article: @latest_article } %>
  </div>
<% end %>



