<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <% flash[:alert] = article.errors.full_message %>
  <% end %>

  <div>
    <%= form.label :title%>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content%>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :date %>
    <%= form.date_field :date %>
  </div>

  <div>
    <%= form.file_field :images, multiple: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
