<div id="<%= dom_id kleider %>">
  <div class="col">
    <div class="card shadow-sm">
      <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
      <div class="card-body">
        <h5><%= kleider.name %></h5>
        <p class="card-text"><%= kleider.description %></p>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <%= link_to "Anzeigen", kleider_path(kleider.id), class: "btn btn-sm btn-outline-secondary" %>
            <% if current_leiter.present? %>
              <%= link_to "Bearbeiten", edit_kleider_path, class: "btn btn-sm btn-outline-secondary" %>
            <% end %>
          </div>
          <small class="text-body-secondary"><strong>Preis: </strong><%= kleider.price %>0 Fr. </small>
        </div>
      </div>
    </div>
  </div>
</div>
