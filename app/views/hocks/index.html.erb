<style>
    .hocks-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: left; /* Adds space between items */
        gap: 20px; /* Adds gap between hocks */
    }

    .hock {
        border: 3px solid #e4be1a;
        border-radius: 25px;
        padding: 10px;
        width: 20%; /* Adjust width so that multiple hocks fit horizontally */
        margin-left: 10px;
        background-color: white;

    }
    .center{
        position: relative;
        top: 20px;
        max-width: fit-content;
        margin: auto;

    }

    .divider {
        font-size: 30px;
        display: flex;
        align-items: center;
    }

    .divider::before, .divider::after {
        flex: 1;
        content: '';
        padding: 3px;
        background-color: red;
        margin: 5px;
    }
</style>

