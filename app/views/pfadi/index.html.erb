
<style>
    .center{
        position: relative;
        top: 20px;
        max-width: fit-content;
        margin: auto;
    }
</style>

<h1 class="center playpen-sans-title" style="font-size: 100px">Pfadi</h1>

<div class="hocks-container">
  <%= render partial: "home/hocks", locals: { hock: @closest_pfadi_hock } %>
</div>

<% @leiter = Leiter.where(stufe: "Pfadi", funktion: "Stufenleitung").first %>

<%= render partial: "shared/contact_form", locals: { image: @leiter.image,
                                                     name: "#{@leiter.firstname} #{@leiter.lastname} v/o #{@leiter.pfadiname.capitalize}",
                                                     funktion: "#{@leiter.funktion} #{@leiter.stufe}",
                                                     email: "#{@leiter.email}" } %>