<style>
    .center{
        position: relative;
        top: 20px;
        max-width: fit-content;
        margin: auto;
    }

    .hocks-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center; /* Adds space between items */
        gap: 20px; /* Adds gap between hocks */
    }
</style>

<h1 class="center" style="font-size: 100px">ðŸ¦« Biber ðŸ¦«</h1>

<div class="hocks-container">
  <%= render partial: "home/hocks", locals: { hock: @closest_biber_hock } %>
</div>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-4 col-md-6 col-sm-10">
      <% @leader = Leader.where(stufe: "Biber", funktion: "Stufenleitung").first %>

      <%= render partial: "shared/contact_form", locals: { image: @leader.image,
                                                           name: "#{@leader.first_name} #{@leader.last_name} v/o #{@leader.pfadiname.capitalize}",
                                                           funktion: "#{@leader.funktion} #{@leader.stufe}",
                                                           email: "#{@leader.email}" } if @leader.present? %>
    </div>
    <div class="w-100"></div>
    <div class="col-lg-4 col-md-6 col-sm-10">
      <% @leaders = Leader.where(stufe: "Biber").where.not(funktion: "Stufenleitung") %>
      <% @leaders.each do |t| %>
        <%= render partial: "shared/contact_form", locals: { image: t.image,
                                                             name: "#{t.first_name} #{t.last_name} v/o #{t.pfadiname.capitalize}",
                                                             funktion: "#{t.funktion} #{t.stufe}",
                                                             email: "#{t.email}" } if t.present?%>
        </div>
        </div>
      <% end %>
      </div>